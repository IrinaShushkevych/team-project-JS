
  <div class='card__image-thumb'>
<div class="card__image-thumb-secondary">
    <img class='card__image'
      data-id='{{id}}'
     {{#if poster_path}}
        src='{{poster_path}}'

        {{#if backdrop_path}}
        src='{{backdrop_path}}'
        {{/if}}
        {{/if}}

        alt='{{title}}'
    />
    <div class='card__button js-add-video'>
          <button class='button__modal--primary button__modal--trailer'>
          
          </button>
        </div>  
        </div>
  </div>
  <div class='card__description'>
    <h3 class='card__title--modal'>{{title}}</h3>
    <table class='card__specifications--modal'>
      <tr class='card__specification-row'>
        <td class='card__specification-name lang' data-key='filmVote'>Vote / Votes</td>
        <td class='card__specification-meaning'>
          <button class='button__modal--primary card__specification-meaning-button'>
            {{vote_average}}
          </button>
          /
          <button class='button__modal--primary card__specification-meaning-button card__specification-meaning-button--secondary'>
           {{vote_count}}
          </button>
        </td>
      </tr>
      <tr class='card__specification-row'>
        <td class='card__specification-name lang' data-key='popular'>Popularity</td>
        <td class='card__specification-meaning'>{{popularity}}</td>
      </tr>
      <tr class='card__specification-row'>
        <td class='card__specification-name lang' data-key='title'>Original Title</td>
        {{#if original_title}}
        <td class='card__specification-meaning card__specification-meaning-name'>{{original_title}}</td>
        {{/if}}
    {{#if name}}
    <td class='card__specification-meaning card__specification-meaning-name'>{{name}}</td>
        {{/if}}
      </tr>
      <tr class='card__specification-row'>
        <td class='card__specification-name lang' data-key='filmGenre'>Genre</td>
        <td class='card__specification-meaning'>
          <ul class='genre__list'>
            {{#each genre_ids}}
          <li class='genre__item'>{{this}}</li>
        {{/each}}
          </ul>
        </td>
      </tr>
    </table>
    <h4 class='card__title-abaut lang' data-key="about">About</h4>
    <p class='card__text-abaut'>
      {{overview}}
    </p>
    <div class='button__container-modal'>
      <ul class='button__list-modal'>
        <li class='button__item-modal js-add-watched'>
          <button class='button__modal--primary button__modal--add lang' data-key='addWatched'>add to Watched</button>
        </li>
        <li class='button__item-modal js-remove-watched hidden'>
          <button class='button__modal--primary button__modal--remove lang' data-key='removeWatched'>
            remove from Watched
          </button>
        </li>
        <li class='button__item-modal js-add-queue'>
          <button class='button__modal--primary button__modal--add lang' data-key='addQueue'>add to Queue</button>
        </li>
        <li class='button__item-modal js-remove-queue hidden'>
          <button class='button__modal--primary button__modal--remove lang' data-key='removeQueue'>
            remove from Queue
          </button>
        </li>  
        </ul>      
    </div>
  </div>


