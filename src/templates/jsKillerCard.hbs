<div class='killers__container container'>
  <h2 class='killers__header'>Team: JS-killers</h2>

  <div class='killers__content'>
    <div class='killers__list list'>
      <marquee class='wanted' behavior='alternate' direction='left'>!__WANTED__!</marquee>
      {{#each this}}
        <div class='post-wrap wrapper-img'>
          <img src='{{photo}}' alt='JS-killer' class='killer__image' id='photo' />

          <div class='post-inner'>
            <span class='dot first'></span>
            <p class='killers__title'>{{name}}</p>
            <span class='dot last'></span>
            <p class='killers__position'>{{position}}</p>
            <p class='killers__motivation'>{{whatKeepsMeUpHere}}</p>
          </div></div>
      {{/each}}
    </div>
  </div>
</div>
