{{#each this }}
  <li class='card' data-id='{{id}}'>
    <div class='card__tumb'>
      <p
        {{#if poster_path}}
        data-src='{{poster_path}}'

        {{#if backdrop_path}}
        data-src='{{backdrop_path}}'
        {{/if}}
        {{/if}}

        data-alt='{{title}}'
        class='card__image'
      ></p>
    </div>
    {{#if original_title}}
      <h2 class='card__title'>{{original_title}}</h2>
    {{/if}}
    {{#if name}}
      <h2 class='card__title'>{{name}}</h2>
    {{/if}}
    <div class='card__caption'>
      <ul class='card__items'>
        {{#each genre_ids}}
          <li class='card__item'>{{this}}</li>
        {{/each}}
      </ul>
      <span class='card__year'>{{release_date}}</span>
      <span class='card__rating'>{{vote_average}}</span>
    </div>
  </li>
{{/each}}